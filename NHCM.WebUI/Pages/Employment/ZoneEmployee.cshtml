@page "{handler?}/{id?}"
@model NHCM.WebUI.Pages.Employment.ZoneEmployeeModel
@{
    ViewData["Title"] = "ZoneEmployees";
    Layout = "~/Pages/Shared/_CustomLayout.cshtml";
}
@Html.AntiForgeryToken()

<div class="panel-heading">
    <h1 class="panel-title"></h1>
</div>
<div class="panel-body" style="padding-bottom:5px;">
    <form id="dv_Employment_ZoneEmployee" class="form main-form page-component" type="form" prefix="ux">
        <fieldset class="content-group">
            <legend class="text-bold"> جهت تنظیم و تعیین کارمندان به زون ها از این فورم استفاده نمایید </legend>
            <div class="row">
                <div class="col-md-4 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group">
                        <label class="text-bold">
                            شهرت کارمند
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <select id="uxpersonid" name="uxpersonid" asp-items="@Model.ListOfPerson"  class="select search" required>
                            <option></option>
                        </select>
                    </div>
                </div>


                <div class="col-md-4 col-sm-12 col-xs-12 pull-right">
                    <div class="form-group">
                        <label class="text-bold">
                            زون مربوطه
                            <span class="text-danger">&nbsp;*</span>
                        </label>
                        <select id="uxzoneid" name="uxzoneid" asp-items="@Model.ListOfZones"  class="select search" required>
                            <option></option>
                        </select>
                    </div>
                </div>


            </div>
         
            <hr />
            <div class="row div-form-control">
                <div class="col-md-12">
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-right"></i>ثبت معلومات</button>
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-right"></i>جستجو </button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-right"></i>صفحه جدید</button>
                    </div>
                </div>
            </div>
            <div class="form-grid">
                <table style="direction: rtl;" bindonclick="true" filter="true">
                    <thead>
                        <tr>
                            <th colname="FirstName">شهرت کارمند</th>
                            <th colname="ZoneName">زون مربوطه</th>
                           
                        </tr>
                    </thead>
                
                </table>
            </div>
        </fieldset>
    </form>
</div>


